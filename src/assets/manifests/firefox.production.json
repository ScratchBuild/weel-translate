{
  "permissions": [
    "<all_urls>",
    "storage",
    "tabs",
    "menus",
    "clipboardRead",
    "clipboardWrite"
  ],

  "web_accessible_resources": [
    "content/*",
    "css/*",
    "js/*",
    "img/*",
    "icon.svg"
  ],

  "background": {
    "scripts": [
      "js/chunk-common.js",
      "js/chunk-vendors.js",
      "js/background/main.js"
    ]
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "match_about_blank": true,
    "all_frames": true,
    "js": [
      "js/chunk-common.js",
      "js/chunk-vendors.js",
      "js/content/main.js"
    ],
    "run_at": "document_end"
  }]
}
