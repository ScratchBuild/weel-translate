{
  "permissions": [
    "<all_urls>",
    "storage",
    "tabs",
    "menus",
    "clipboardRead",
    "clipboardWrite"
  ],

  "background": {
    "scripts": [
      "background/main.js"
    ]
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "match_about_blank": true,
    "all_frames": true,
    "js": [
      "content/main.js"
    ],
    "run_at": "document_end"
  }],

  "options_ui": {
    "page": "options/main.html",
    "open_in_tab": true,
    "browser_style": false
  }
}
